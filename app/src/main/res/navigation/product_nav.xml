<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav"
    app:startDestination="@id/productDetailsFragment">

    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.qrouville.myapplication.ProductActivity"
        android:label="ProductDetailsFragment" >
        <argument
            android:name="product"
            app:argType="com.qrouville.myapplication.Product" />
        <action
            android:id="@+id/action_productDetailsFragment_to_productNutritionFragment"
            app:destination="@id/productNutritionFragment" />
    </fragment>
    <fragment
        android:id="@+id/productNutritionFragment"
        android:name="com.qrouville.myapplication.ProductNutritionActivity"
        android:label="ProductNutritionFragment" >
        <action
            android:id="@+id/action_productNutritionFragment_to_productNutritionTabFragment"
            app:destination="@id/productNutritionTabFragment" />
    </fragment>
    <fragment
        android:id="@+id/productNutritionTabFragment"
        android:name="com.qrouville.myapplication.ProductNutritionInfosActivity"
        android:label="ProductNutritionTabFragment" >
    </fragment>
</navigation>